generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Budget {
  id        Int      @id @default(autoincrement())
  date      DateTime
  budget    Float
  maxBudget Float
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String
  iconId Int
}

model Icon {
  id   Int    @id @default(autoincrement())
  name String @unique(map: "icon_name")
}

model Owner {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Payment {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  date        DateTime
  owner       String
  type        String
}

model Type {
  id   Int    @id @default(autoincrement())
  name String @unique
}
